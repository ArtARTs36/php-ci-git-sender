{
    "name": "artarts36/ci-git-sender",
    "description": "CI Git Sender",
    "type": "library",
    "require": {
        "artarts36/git-handler": "^1.1",
        "ondram/ci-detector": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "ArtARTs36\\CiGitSender\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArtARTs36\\CiGitSender\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "ArtARTs36",
            "email": "temicska99@mail.ru"
        }
    ],
    "require-dev": {
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpunit/phpunit": "^9.5",
        "artarts36/php-cs-fixer-good-fixers": "^0.1.0"
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --dry-run --verbose --diff --ansi --allow-risky=yes"
        ],
        "test": [
            "echo 'Run tests'",
            "XDEBUG_MODE=coverage ./vendor/bin/phpunit -v --coverage-text --configuration phpunit.xml --coverage-clover=tests/reports/logs/clover.xml --coverage-xml=tests/reports/logs/coverage-xml --log-junit=tests/reports/logs/junit.xml"
        ]
    }
}
